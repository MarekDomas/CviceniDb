<Window x:Class="CviceniDb.UserInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CviceniDb"
        mc:Ignorable="d"
        Title="UserInfo" Height="450" Width="800">
    <Grid>
        <Label x:Name="UserNameBox" FontSize="16" Margin="510,60,0,0" Height="Auto" BorderBrush="Black" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto"/>

        <!--<ListView  x:Name="WorkoutsList" Height="324" VerticalAlignment="Center" HorizontalAlignment="Center" Width="274" />-->

        <Button x:Name="AddTraining" Click="AddTraining_Click" Height="25" Content="Přidat tréning" Margin="554,311,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="87"/>
        <Button x:Name="CreateExcersiseButt" Content="Vytvořit cvik" Height="25" Click="CreateExcersiseButt_Click" Margin="554,265,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="87"/>
        <Button x:Name="LogOutButt" Content="Odhlásit se" Width="65" Height="25" Click="LogOutButt_Click" Margin="0,42,701,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button x:Name="DeleteTrainingButt" Content="Smazat" Height="25" Click="DeleteTrainingButt_Click" Margin="554,359,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="87"/>

        <ListView 
        x:Name="Seznam"
        Width="300" 
            Margin="130,60,0,0" Height="324" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding NameOfTraining}" FontWeight="Bold" Margin="5,0"/>
                        <TextBlock Text="{Binding DateOfTraining,StringFormat=dd/MM/yyyy}" FontWeight="Bold" Margin="5,0"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
